<Container>
  <Name>bambubridge</Name>
  <Repository>ghcr.io/schartrand77/bambubridge:main</Repository>
  <Project>https://github.com/schartrand77/bambubridge</Project>
  <Overview>FastAPI bridge for Bambu Lab printers on the local network.</Overview>
  <Network>bridge</Network>
  <WebUI>http://[IP]:[PORT:8288]/docs</WebUI>
  <Icon>https://raw.githubusercontent.com/schartrand77/bambubridge/main/icon.png</Icon>
  <ExtraParams>--restart unless-stopped</ExtraParams>

  <Ports>
    <Port>
      <HostPort>8288</HostPort>
      <ContainerPort>8088</ContainerPort>
      <Protocol>tcp</Protocol>
    </Port>
  </Ports>

  <Labels>
    <Label>
      <Name>net.unraid.docker.managed</Name>
      <Value>dockerman</Value>
    </Label>
    <Label>
      <Name>net.unraid.docker.webui</Name>
      <Value>http://[IP]:[PORT:8288]/docs</Value>
    </Label>
  </Labels>

  <!-- Only these Config rows define env vars shown in the UI -->
  <Config Name="BAMBULAB_PRINTERS" Target="BAMBULAB_PRINTERS" Default="babu@192.168.1.XX" Mode="env" Description="name@host;name2@host2" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="BAMBULAB_SERIALS" Target="BAMBULAB_SERIALS" Default="babu=00M0XXXXXXXXXXX" Mode="env" Description="name=SERIAL;name2=SERIAL2" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="BAMBULAB_LAN_KEYS" Target="BAMBULAB_LAN_KEYS" Default="babu=YOUR_ACCESS_CODE" Mode="env" Description="name=LAN_ACCESS_CODE;name2=CODE2" Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="BAMBULAB_TYPES" Target="BAMBULAB_TYPES" Default="babu=X1C" Mode="env" Description="(optional) name=model (X1C/P1S/A1...)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="BAMBULAB_REGION" Target="BAMBULAB_REGION" Default="US" Mode="env" Description="Region for pybambu ctor" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="BAMBULAB_AUTOCONNECT" Target="BAMBULAB_AUTOCONNECT" Default="1" Mode="env" Description="1=autoconnect on startup; 0=lazy" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="BAMBULAB_CONNECT_INTERVAL" Target="BAMBULAB_CONNECT_INTERVAL" Default="0.1" Mode="env" Description="Seconds between connection status checks" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="BAMBULAB_CONNECT_TIMEOUT" Target="BAMBULAB_CONNECT_TIMEOUT" Default="5" Mode="env" Description="Total seconds to wait for connection" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="PYTHONUNBUFFERED" Target="PYTHONUNBUFFERED" Default="1" Mode="env" Description="leave as 1" Type="Variable" Display="advanced" Required="false" Mask="false"/>

  <!-- Expose the host port in the UI -->
  <Config Name="WebUI Port" Target="8288" Default="8288" Mode="tcp" Description="Host port for the API/UI" Type="Port" Display="always" Required="true" Mask="false"/>
</Container>
